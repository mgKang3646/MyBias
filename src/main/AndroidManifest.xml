<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.actorsearchapplication">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ActorSearchApplication"
        android:usesCleartextTraffic="true">

        <activity
            android:name=".ImageSearchResultActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".SelectedImageActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".CameraCaptureActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation"
            android:exported="false" />
        <activity
            android:name=".SearchImageActivity"
            android:screenOrientation="portrait"
            android:exported="false"
            android:theme="@style/Transparent" />
        <activity
            android:name=".TvDetailActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".MovieDetailActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".CategoryActivity"
            android:screenOrientation="portrait"
            android:exported="false"
            android:theme="@style/Transparent" />
        <activity
            android:name=".ActorDetailActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".SearchActivity"
            android:screenOrientation="portrait"
            android:exported="false" />

        <activity
            android:name=".Splash"
            android:screenOrientation="portrait"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:exported="false"
            android:label="Home"/>

    </application>

</manifest>